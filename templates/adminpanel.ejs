<!DOCTYPE html>
<html lang="en" dir="ltr" class="h-100">
  <head>
    <meta charset="utf-8">
    <title></title>
    <%- include('style'); -%>
    <!-- <link rel="stylesheet" type="text/css" href="css/style.css" /> -->
  </head>
  <body class="h-100">
    <%- include('header-admin'); -%>
    <div class="container h-100">
      <div class="row h-100">
        <div class="col-12 py-5 mb-5">
            <h1>Product list</h1>
            <hr>
            <table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Calories</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <%
    let i = 0;
    products.forEach(function(product) { %>
      <tr>
        <th scope="row"><%= ++i %></th>
        <td><%= product.name %></td>
        <td><%= product.calories %></td>
        <td>
          <div class="d-flex justify-content-end">
            <a href="/product/update/<%= product._id %>" class="btn-success btn py-0" >Update</a>
            <a href="#" data-id="<%= product._id %>" class="btn-danger btn py-0 ml-3 delete-product">Remove</a>
          </div>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
        </div>
      </div>
    </div>
    <div class="position-fixed fixed-bottom text-center py-5 px-2">
      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#productModal">
        Add new product
      </button>
    </div>

    <div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <form class="w-100 modal-content" action="/product/add" method="post">
          <div class="modal-header">
            <h5 class="modal-title">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
              <div class="form-group">
                <input type="text" class="form-control" name="name" id="name" placeholder="Name">
              </div>
              <div class="form-group">
                <input type="number" class="form-control" name="calories" id="calories" placeholder="Calories for 100 gramms">
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
        </div>
      </div>
    </div>


    <%- include('script'); -%>
  </body>
</html>
