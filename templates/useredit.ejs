<!DOCTYPE html>
<html lang="ru" dir="ltr"  class="h-100">
  <head>
    <meta charset="utf-8">
    <title>Admin register</title>
    <%- include('style'); -%>
  </head>
  <body class="h-100">
    <%- include('header-admin'); -%>
    <div class="container h-100">
      <div class="row h-100">
        <div class="col-12 d-flex justify-content-center align-items-center">
          <form class="w-50" action="/user/edit/<%= user._id %>" method="post">
            <div class="form-group pb-4">
              <label for="name">Name</label>
              <input id="name" class="form-control" type="text" name="name" value="<%= user.name %>">
            </div>
            <div class="form-row">
              <div class="col">
                <input class="form-control" type="number" name="age" value="<%= user.age %>">
              </div>
              <div class="col">
                <input class="form-control" type="number" name="weight" value="<%= user.weight %>">
              </div>
              <div class="col">
                <input class="form-control" type="number" name="height" value="<%= user.height %>">
              </div>
            </div>
            <div class="form-group pt-4">
              <label for="sex">Sex</label>
              <select class="form-control" id="sex" name="sex">
                <option>Male</option>
                <option>Female</option>
              </select>
            </div>
            <input type="submit" name="submit" value="Save" class="btn btn-primary">
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
