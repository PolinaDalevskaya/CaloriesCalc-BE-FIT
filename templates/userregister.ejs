<!DOCTYPE html>
<html lang="ru" dir="ltr"  class="h-100">
  <head>
    <meta charset="utf-8">
    <title>Admin register</title>
    <%- include('style'); -%>
  </head>
  <body class="h-100">
    <%- include('header'); -%>
    <div class="container h-100">
      <div class="row h-100">
        <div class="col-12 d-flex justify-content-center align-items-center">
          <form class="w-50" action="/register" method="post">
            <div class="form-group pb-4">
              <label for="name">Name</label>
              <input id="name" class="form-control" type="text" name="name" value="">
            </div>
            <div class="form-row">
              <div class="col">
                <input class="form-control" type="number" name="age" value="" placeholder="Age">
              </div>
              <div class="col">
                <input class="form-control" type="number" name="weight" value="" placeholder="Weight">
              </div>
              <div class="col">
                <input class="form-control" type="number" name="height" value="" placeholder="Height">
              </div>
            </div>
            <div class="form-group pt-4">
              <label for="sex">Sex</label>
              <select class="form-control" id="sex" name="sex">
                <option>Male</option>
                <option>Female</option>
              </select>
            </div>
            <div class="form-group">
              <label for="pass">Password</label>
              <input id="pass" class="form-control" type="password" name="password" value="">
            </div>
            <div class="form-group">
              <label for="rpass">Repeat password</label>
              <input id="rpass" class="form-control" type="password" name="password2" value="">
            </div>
            <input type="submit" name="submit" value="Submit" class="btn btn-primary">
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
